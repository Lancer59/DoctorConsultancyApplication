<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".AdminLogin">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="150dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095"
        app:srcCompat="@drawable/w1" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="281dp"
        android:layout_height="56dp"

        android:fontFamily="@font/acme"
        android:text="ADMIN LOGIN"
        android:textColor="#000000"
        android:textSize="43dp"

        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.06" />

    <EditText
        android:id="@+id/aemail"
        android:layout_width="277dp"
        android:layout_height="63dp"

        android:backgroundTint="@color/teal_200"

        android:hint="Username"
        android:inputType="textPersonName"
        android:singleLine="false"


        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:barrierMargin="@dimen/cardview_default_elevation"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.462" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="180dp"
        android:layout_height="34dp"
        android:layout_marginBottom="12dp"

        android:fontFamily="@font/acme"
        android:text="Password:"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/apassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.94" />

    <EditText
        android:id="@+id/apassword"
        android:layout_width="279dp"
        android:layout_height="57dp"


        android:backgroundTint="@color/teal_200"

        android:hint="Password"
        android:inputType="textPassword"
        android:singleLine="false"


        android:textColor="#000000"
        android:textColorHighlight="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold"

        app:barrierMargin="@dimen/cardview_default_elevation"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="168dp"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"

        android:fontFamily="@font/acme"
        android:text="Username:"
        android:textColor="#000000"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/aemail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.267"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.992" />

    <Button
        android:id="@+id/adlogin"
        android:layout_width="209dp"
        android:layout_height="65dp"

        android:backgroundTint="#202C9E"

        android:fontFamily="@font/capriola"
        android:onClick="adminlogin"
        android:text="Login"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956"
        app:strokeColor="#F14726" />


</androidx.constraintlayout.widget.ConstraintLayout>